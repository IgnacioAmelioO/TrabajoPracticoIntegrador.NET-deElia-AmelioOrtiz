@page "/especialidades/editar/{Id_especialidad:int}"
@using DTOs
@using Api.Clients
@inject NavigationManager Navigation

<h3>Editar Especialidad</h3>

@if (especialidad == null)
{
    <p>Cargando...</p>
}
else
{
    <EditForm Model="especialidad" OnValidSubmit="Guardar" FormName="FormEditarEspecialidad">
        <DataAnnotationsValidator />

        <!-- ID solo lectura -->
        <div class="mb-3">
            <label class="form-label">ID</label>
            <input class="form-control" value="@especialidad.Id_especialidad" readonly />
        </div>

        <!-- Descripción editable -->
        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <InputText class="form-control"
                       @bind-Value="especialidad.Desc_esp"
                       @bind-Value:event="oninput" />
            <ValidationMessage For="@(() => especialidad.Desc_esp)" />
        </div>

        <!-- Vista previa en tiempo real -->
        <div class="alert alert-info mt-3">
            <strong>Vista previa:</strong> @especialidad.Desc_esp
        </div>

        <!-- Botones -->
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary ms-2" @onclick="Volver">Volver</button>
    </EditForm>
}

@code {
    [Parameter]
    public int Id_especialidad { get; set; }

    private EspecialidadDTO especialidad;

    protected override async Task OnInitializedAsync()
    {
        // Traemos la especialidad desde la capa de datos
        especialidad = await EspecialidadApiClient.GetAsync(Id_especialidad);
    }

    private async Task Guardar()
    {
        // Debug en consola
        Console.WriteLine($"DEBUG -> Guardando ID: {especialidad.Id_especialidad}, Desc: {especialidad.Desc_esp}");

        // Guardamos la especialidad usando la capa de EF Core
        await EspecialidadApiClient.UpdateAsync(especialidad);

        // Volvemos a la lista de especialidades
        Navigation.NavigateTo("/especialidades");
    }

    private void Volver()
    {
        Navigation.NavigateTo("/especialidades");
    }
}
